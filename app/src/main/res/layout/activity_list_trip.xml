<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListTrip">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal"
        android:background="#fece2f"
        >
        <ImageButton
            android:id="@+id/imgBackXP"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abc_vector_test" />
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="290dp"
                android:layout_height="25dp"
                android:text="Hồ Chí Minh -> Bà Rịa vũng tàu"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:text="APR 23, 2021"
                    android:textSize="15sp"
                    >
                </TextView>
                <ImageButton
                    android:layout_marginLeft="10dp"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                   android:src="@drawable/down"
                    >
                </ImageButton>

            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="57dp"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/schoolbus"
            android:transitionName="imageVBA"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:background="#fece2f"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:text="Lọc"
            app:backgroundTint="@color/black">

        </Button>
        <Button
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:text="Sắp xếp"
            app:backgroundTint="@color/black">

        </Button>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        >
        <ImageView
            android:layout_width="411dp"
            android:layout_height="99dp"
            android:src="@drawable/ic_wave"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="-85dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Đặt vé trực tuyến">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="-5dp"
        android:id="@+id/rclViewListTrip"
        android:layout_width="match_parent"
        android:layout_height="400sp">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>