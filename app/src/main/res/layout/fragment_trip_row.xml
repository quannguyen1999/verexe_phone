<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:paddingTop="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/shadow_7341"
    android:id="@+id/lnItemTrip">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:orientation="horizontal"
           >
           <TextView
               android:id="@+id/txtTimeBegin"
               android:textColor="@color/black"
               android:textSize="15dp"
               android:textStyle="bold"

               android:layout_width="50dp"
               android:layout_height="20dp"
               android:text="04:00">
           </TextView>
           <TextView
               android:id="@+id/txtTimeFinish"
               android:textColor="@color/black"
               android:textSize="15dp"
               android:textStyle="bold"
               android:textAlignment="textEnd"
               android:layout_width="match_parent"
               android:layout_height="20dp"
               android:text="04:00">
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:orientation="horizontal"
           >
           <TextView
               android:id="@+id/txtFromProject"
               android:textColor="@color/black"
               android:textSize="10dp"
               android:textStyle="bold"
               android:textAlignment="textStart"
               android:layout_width="200dp"
               android:layout_height="20dp"
               android:text="Văn phòng Quận 1">
           </TextView>
           <TextView
               android:id="@+id/txtToProject"
               android:textColor="@color/black"
               android:textSize="10dp"
               android:textStyle="bold"
               android:textAlignment="textEnd"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:text="Văn Phòng Vũng Tàu">
           </TextView>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:elevation="2dp"
           android:background="@drawable/myrect"
           >
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           >
           <ImageView
               android:paddingRight="5dp"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/schoolbus">

           </ImageView>
           <TextView
               android:id="@+id/txtTitle"
               android:textColor="@color/black"
               android:textSize="13dp"
               android:textStyle="bold"
               android:paddingTop="15dp"

               android:layout_width="90dp"
               android:layout_height="50dp"
               android:text="Vie Limousine">
           </TextView>
           <TextView
               android:id="@+id/txtRate"
               android:textColor="@color/black"
               android:textSize="13dp"
               android:textStyle="bold"
               android:paddingTop="15dp"
               android:textAlignment="textEnd"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:text="4.7">
           </TextView>
           <ImageView
               android:paddingBottom="5dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:src="@drawable/star"
               ></ImageView>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:elevation="2dp"
           android:background="@drawable/myrect"
           >
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           >
           <TextView

               android:textSize="13dp"
               android:textStyle="bold"
               android:paddingTop="15dp"

               android:layout_width="30dp"
               android:layout_height="50dp"
               android:text="Còn"/>
           <TextView
                android:id="@+id/txtBlank"
               android:textSize="13dp"
               android:textStyle="bold"
               android:paddingTop="15dp"

               android:layout_width="15dp"
               android:layout_height="50dp"
               android:text="4">
           </TextView>
           <TextView

               android:textSize="13dp"
               android:textStyle="bold"
               android:paddingTop="15dp"
               android:layout_width="110dp"
               android:layout_height="50dp"
               android:text="chỗ trống">
           </TextView>
           <TextView
               android:id="@+id/txtPrice"
               android:textColor="@color/black"
               android:textSize="13dp"
               android:textStyle="bold"
               android:paddingTop="15dp"

               android:textAlignment="textEnd"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:text="140.000">
           </TextView>
           <TextView
               android:textColor="@color/black"
               android:textSize="13dp"
               android:textStyle="bold"
               android:paddingTop="15dp"

               android:textAlignment="textEnd"
               android:layout_width="10dp"
               android:layout_height="50dp"
               android:text="đ">
           </TextView>
       </LinearLayout>
   </LinearLayout>


</LinearLayout>